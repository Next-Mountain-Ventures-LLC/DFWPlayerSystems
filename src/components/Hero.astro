---
import { Image } from "astro:assets";
import { buttonVariants } from "@/components/ui/button";
---

<section class="py-20 md:py-32">
  <div class="container">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-10 items-center">
      <div class="space-y-6 animate-fade-in">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight">
          Transform Your Piano with <span class="text-accent">Automated Playing</span>
        </h1>
        
        <p class="text-lg md:text-xl text-foreground/80">
          Expert installation of QRS piano automation systems with a clean, efficient process and 7-day turnaround time.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 pt-4">
          <a href="#contact" class={buttonVariants({ variant: 'default', size: 'lg', class: "w-full sm:w-auto" })}>
            Schedule Installation
          </a>
          <a href="#process" class={buttonVariants({ variant: 'outline', size: 'lg', class: "w-full sm:w-auto" })}>
            Our Process
          </a>
        </div>

        <div class="pt-8 grid grid-cols-3 gap-8">
          <div class="text-center">
            <div class="text-accent text-2xl md:text-3xl font-bold mb-1">1000s</div>
            <p class="text-foreground/70 text-sm">Songs Available</p>
          </div>
          <div class="text-center">
            <div class="text-accent text-2xl md:text-3xl font-bold mb-1">15+</div>
            <p class="text-foreground/70 text-sm">Years Experience</p>
          </div>
          <div class="text-center">
            <div class="text-accent text-2xl md:text-3xl font-bold mb-1">7</div>
            <p class="text-foreground/70 text-sm">Day Installation</p>
          </div>
        </div>
      </div>
      
      <div class="relative animate-slide-in-right">
        <div class="bg-accent/10 absolute -inset-4 md:-inset-6 rounded-lg -rotate-2"></div>
        <img
          src="https://images.unsplash.com/photo-1624088798012-7eabdb19cf90?w=800&h=450&auto=format&fit=crop&q=75"
          alt="Grand piano"
          class="rounded-lg relative z-10 w-full"
          loading="lazy"
          decoding="async"
        />
      </div>
    </div>
  </div>
</section>
